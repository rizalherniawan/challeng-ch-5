<body>
        <div class="main-screen background">
            <div class="container-fluid">
                <div class="row">
                    <div class="col header d-flex justify-content-start mt-4">
                        <a href="/loggedin"><div class="isi-header-1"><img src="./assets/Panah.png"></div></a>
                        <div class="isi-header-2"><img class='gambar-header-1' src="./assets/logo 1.png"></div>
                        <div class="isi-header-3">rock paper scissors</div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row content-1">
                    <div class="col-4 col1">
                        <div class="row">
                            <div class="col">
                                <div class="player-1">player 1</div>
                            </div>
                        </div>
                        <div class="row">
